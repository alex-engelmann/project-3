  "bugs": {
    "url": "https://github.com/alex-engelmann/project-3/issues"
  },
  "homepage": "https://github.com/alex-engelmann/project-3#readme",
  "dependencies": {
    "concurrently": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.8",
    "nodemon": "^1.19.1",
    "path": "^0.12.7"
  }
}
